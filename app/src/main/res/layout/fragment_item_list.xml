<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:clickable="true"


    >


    <LinearLayout



        android:paddingTop="5dp"
        android:layout_width="match_parent"



        android:layout_marginBottom="3dp"
        android:background="@drawable/shadowbag"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ToggleButton



            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/togglelayoutitem"


            android:background="@drawable/togglelayout"

            />

        <ImageView
            android:layout_width="match_parent"

            android:layout_gravity="center_vertical"
            android:layout_height="20dp"

            android:id="@+id/searchpagesort"
            android:layout_weight="1"
            android:src="@drawable/sortsearch"/>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:id="@+id/filtersearchpage"
            android:layout_gravity="center_vertical"
            android:src="@drawable/filtersearchpage"/>


    </LinearLayout>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:clipToPadding="false"

        android:background="@color/white"
        android:name="com.example.sparsh23.laltern.ItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        tools:context="com.example.sparsh23.laltern.ItemFragment"
        />


</LinearLayout>


