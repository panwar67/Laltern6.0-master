<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:background="@color/backgroundoff"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/navrep"
    tools:context="com.example.sparsh23.laltern.NavigationMenu"
    tools:showIn="@layout/app_bar_navigation_menu">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:background="@color/backgroundoff"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">




                <EditText

                    android:layout_margin="10dp"

                    android:hint="Search for crafts, Artist and Products"

                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="13dp"
                    android:drawableLeft="@drawable/searchnew"
                    android:focusable="false"
                    android:id="@+id/searchviewrealid"

                    android:drawableRight="@drawable/filter"


                    android:layout_width="match_parent"
                    android:background="@drawable/shadowbag"
                    android:layout_height="wrap_content">

                </EditText>











            <include
                layout="@layout/nav_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


            <TextView

                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" VIEW TRENDING PRODUCTS"
                android:background="@drawable/shadowbag"
                android:textColor="#5a595b"
                android:textStyle="bold"

                android:textSize="15dp"/>









            <org.lucasr.twowayview.TwoWayView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontallist"
                android:layout_weight="1"


                android:orientation="horizontal"
                android:paddingBottom="10dp"/>

            <TextView

                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" VIEW CRAFTS"
                android:background="@drawable/shadowbag"
                android:textColor="#5a595b"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:textSize="15dp"/>



            <org.lucasr.twowayview.TwoWayView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontallist1"
                android:orientation="horizontal"
                android:background="@color/backgroundoff"
                android:paddingBottom="10dp">

            </org.lucasr.twowayview.TwoWayView>


            <TextView
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" VIEW ARTIST"

                android:background="@drawable/shadowbag"
                android:textColor="#5a595b"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:textSize="15dp"/>

            <org.lucasr.twowayview.TwoWayView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontallist2"
                android:background="@color/backgroundoff"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
            </org.lucasr.twowayview.TwoWayView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
